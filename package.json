{
  "name": "french-law-to-txt",
  "version": "1.0.0",
  "description": "Parses codes.droit.org's XML files into text files that can be digested by an LLM.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "pull-xml": "mkdir xml; bash scripts/pull-xml.sh",
    "xml-to-txt": "mkdir txt; mkdir translations_backup; node scripts/xml-to-txt.js",
    "clear-txt": "rm -rf txt; mkdir txt",
    "clear-xml": "rm -rf xml; mkdir xml"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "glob": "^10.3.3",
    "node-html-parser": "^6.1.5",
    "openai": "^4.0.0",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "standard": "^17.1.0"
  }
}
